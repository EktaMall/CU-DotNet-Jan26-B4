@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">

    <h2 class="mb-4">Available Training Courses</h2>

    <div class="row">

        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">.NET</h5>
                    <p class="card-text">
                        Core concepts, CLR, BCL, MVC, Web API
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">C#</h5>
                    <p class="card-text">
                        OOP, LINQ, Delegates, Exception Handling
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">Cloud Computing</h5>
                    <p class="card-text">
                        Cloud basics, IaaS, PaaS, SaaS
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">Azure</h5>
                    <p class="card-text">
                        Azure VM, App Services, Storage, DevOps
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
