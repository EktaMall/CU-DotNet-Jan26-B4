@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 text-center">

    <!-- Welcome Heading -->
    <h1 class="display-5 fw-bold mb-3">Welcome to the Training Portal</h1>

    <!-- Short Professional Description -->
    <p class="lead text-muted mb-4">
        This Training Portal is designed to support post-placement learning and skill enhancement
        for freshers undergoing corporate training in <strong>.NET, C#, and Cloud technologies</strong>.
    </p>

    <p class="mb-5">
        The portal provides structured access to training courses, technologies, trainers, and
        assessments, helping trainees track their learning progress and build industry-ready skills.
    </p>

    <!-- Highlight Cards -->
    <div class="row mt-4">

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h5> Courses</h5>
                <p class="text-muted">Well-structured training modules for core technologies</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h5> Technologies</h5>
                <p class="text-muted">Hands-on learning with modern enterprise tools</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h5> Trainers</h5>
                <p class="text-muted">Guidance from experienced industry professionals</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h5> Assessments</h5>
                <p class="text-muted">Regular evaluations to track progress and performance</p>
            </div>
        </div>

    </div>

</div>
